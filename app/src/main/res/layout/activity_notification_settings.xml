<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="vertical"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_notification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mainaccount.inspire.NotificationSettingsActivity">

    <TextView
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Clock text"
        android:id="@+id/clock_text"
        android:textSize="21sp"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:textStyle="normal|bold" />


    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/clock_text"
        android:id="@+id/timePicker" />

    <Button
        android:id="@+id/edit_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/button_size"
        style="@style/btn_style"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/timePicker"
        android:text="Edit notification time" />


    <Button
        android:id="@+id/set_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/btn_style"
        android:textStyle="bold"
        android:textSize="@dimen/button_size"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/edit_time"
        android:text="Set notification time" />

    <Button
        android:id="@+id/start_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/inspireGrey"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/button_size"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/set_time"
        android:text="Start Notifications" />

    <Button
        android:id="@+id/stop_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/inspireGrey"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/button_size"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/start_notifications"
        android:text="Stop Notifications" />



</RelativeLayout>
    </ScrollView>