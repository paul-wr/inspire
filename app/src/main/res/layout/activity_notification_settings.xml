<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="vertical"
    android:fillViewport="true"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_notification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.mainaccount.inspire.activities.NotificationSettingsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/default_padding"
            android:layout_height="wrap_content">

            <include layout="@layout/page_heading"/>

            <TimePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner"
                android:layout_marginTop="65dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/heading_text"
                android:id="@+id/timePicker" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="17"
            android:layout_marginTop="10dp"
            android:id="@+id/gemTVLinearL"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/info_tv"
                android:layout_weight="15"
                android:padding="30dp"
                android:textSize="@dimen/main_text_size"
                android:text="@string/settings_tv"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/info_btn"
                android:layout_gravity="right"
                android:layout_weight="2"
                android:padding="@dimen/default_padding"
                android:layout_below="@+id/set_time"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_info"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/start_notifications"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/btn_style2"
                android:text="Start Notifications" />

            <Button
                android:id="@+id/stop_notifications"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/btn_style2"
                android:text="Stop Notifications" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/edit_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/button_size"
                style="@style/btn_style2"
                android:text="Edit notification time" />

            <Button
                android:id="@+id/set_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/btn_style2"
                android:text="Set notification time" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/bottom_nav"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
