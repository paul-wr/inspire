<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="vertical"
    android:fillViewport="true"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_notification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.mainaccount.inspire.activities.NotificationSettingsActivity">

        <include layout="@layout/page_heading"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="@dimen/default_padding"
            android:layout_height="wrap_content">


            <TimePicker
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:timePickerMode="spinner"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/heading_text"
                android:id="@+id/timePicker" />
             <LinearLayout
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:padding="5dp"
                 android:orientation="vertical">
                 <Button
                     android:id="@+id/start_notifications"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_centerHorizontal="true"
                     style="@style/btn_style2"
                     android:text="@string/start_notifications" />

                 <Button
                     android:id="@+id/stop_notifications"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_centerHorizontal="true"
                     style="@style/btn_style2"
                     android:text="@string/stop_notifications" />


                 <Button
                     android:id="@+id/edit_time"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     style="@style/btn_style2"
                     android:text="@string/edit_notification_time" />

                 <Button
                     android:id="@+id/set_time"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     style="@style/btn_style2"
                     android:text="@string/set_notification_time" />

         </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="17"
            android:id="@+id/gemTVLinearL"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/info_tv"
                android:layout_weight="15"
                android:padding="30dp"
                android:textSize="@dimen/main_text_size"
                android:text="@string/settings_tv"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/info_btn"
                android:layout_gravity="right"
                android:layout_weight="2"
                android:padding="@dimen/default_padding"
                android:layout_below="@+id/set_time"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_info"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/admin_tv"
            style="@style/header_style"
            android:textAlignment="center"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:textSize="@dimen/main_text_size"
            android:text="@string/admin_testing_privilages"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:padding="@dimen/default_padding"
            android:layout_marginTop="10dp"
            android:id="@+id/adminLinearL"
            android:orientation="horizontal">

            <Button
                android:id="@+id/half_hour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                style="@style/btn_style2"
                android:text="@string/half_hour" />
            <Button
                android:id="@+id/fifteen_mins"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/btn_style2"
                android:text="@string/_15_minutes" />
            <Button
                android:id="@+id/sixty_seconds"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/btn_style2"
                android:text="@string/_60_seconds" />
            <Button
                android:id="@+id/twenty_seconds"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/btn_style2"
                android:text="@string/_20_seconds" />
        </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/bottom_nav"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
